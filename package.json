{
  "name": "uw-elective-chooser-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "University of Waterloo Elective Chooser - Full Stack Application",
  "scripts": {
    "dev": "cd frontend && npm run dev",
    "dev:turbo": "cd frontend && npm run dev:turbo",
    "dev:debug": "cd frontend && npm run dev:debug",
    "build": "cd frontend && npm run build",
    "start": "cd frontend && npm run start",
    "lint": "cd frontend && npm run lint",
    "type-check": "cd frontend && npm run type-check",
    "clean": "cd frontend && npm run clean",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && pip install -r requirements.txt",
    "install:all": "npm run install:frontend && npm run install:backend",
    "setup": "npm run install:all && npm run build"
  },
  "workspaces": [
    "frontend"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
